# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

# https://editorconfig.org/
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
tab_width = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{java,jsp}]
indent_size = 4
tab_width = 4
insert_final_newline = false

[{*.{awk,bat,c,cpp,d,h,l,mk,re,skl,w32,y},Makefile*}]
indent_size              = 4
indent_style             = tab

[*.{dtd,html,inc,php,phpt,rng,wsdl,xml,xsd,xsl}]
indent_size              = 4
indent_style             = space

[*.md]
indent_style             = space
max_line_length          = 80

[COMMIT_EDITMSG]
indent_size              = 4
indent_style             = space
max_line_length          = 80

[*.patch]
trim_trailing_whitespace = false
